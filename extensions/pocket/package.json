{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pocket",
  "title": "Pocket",
  "description": "Manage Pocket bookmarks from Raycast",
  "icon": "pocket-logo.png",
  "author": "vimtor",
  "contributors": [
    "hrishabhn",
    "xmok",
    "pernielsentikaer"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "defaultOpen",
      "title": "Default App",
      "type": "dropdown",
      "description": "What should be the primary action",
      "default": "pocket-website",
      "required": false,
      "data": [
        {
          "title": "Browser",
          "value": "browser"
        },
        {
          "title": "Pocket Website",
          "value": "pocket-website"
        }
      ]
    }
  ],
  "categories": [
    "Applications",
    "Productivity"
  ],
  "commands": [
    {
      "name": "search",
      "title": "Search Bookmarks",
      "subtitle": "Pocket",
      "description": "Search Pocket unread bookmarks",
      "mode": "view",
      "arguments": [
        {
          "type": "text",
          "name": "title",
          "placeholder": "Title",
          "required": false
        }
      ]
    },
    {
      "name": "random",
      "title": "Open Random Bookmark",
      "subtitle": "Pocket",
      "description": "Opens a random unread bookmark",
      "mode": "no-view"
    },
    {
      "name": "latest",
      "title": "Open Latest Bookmark",
      "subtitle": "Pocket",
      "description": "Opens the latest added unread bookmark",
      "mode": "no-view"
    },
    {
      "name": "create",
      "title": "Create Bookmark",
      "subtitle": "Pocket",
      "description": "Create bookmark manually",
      "mode": "view"
    },
    {
      "name": "clipboard",
      "title": "Save Clipboard",
      "subtitle": "Pocket",
      "description": "Create bookmark from clipboard contents",
      "mode": "no-view"
    },
    {
      "name": "browser-tab",
      "title": "Save Current Tab",
      "subtitle": "Pocket",
      "description": "Create bookmark from active browser tab",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
