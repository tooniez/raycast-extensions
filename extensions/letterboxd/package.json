{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "letterboxd",
  "title": "Letterboxd",
  "description": "Search for movies on Letterboxd",
  "icon": "icon.png",
  "author": "rafael_garcia",
  "contributors": [
    "ridemountainpig"
  ],
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-movies-page",
      "title": "Search Movies",
      "subtitle": "Letterboxd",
      "description": "Search Letterboxd movies by title",
      "mode": "view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.5",
    "@raycast/utils": "^2.2.2",
    "cheerio": "^1.2.0",
    "node-html-markdown": "^2.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "25.2.1",
    "@types/react": "19.2.13",
    "eslint": "^10.0.0",
    "prettier": "3.8.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
