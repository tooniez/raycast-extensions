{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "stealth-ai-tool",
  "title": "Stealth AI",
  "description": "In-line AI formatting. Configure your AI provider via the 'Configure AI Model' command. Set custom Hotkey & Alias per action in Settings.",
  "version": "1.1.0",
  "icon": "icon.png",
  "author": "ahmed",
  "categories": [
    "Productivity"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "ai": {
    "evals": [
      {
        "input": "Fix grammar in: hello world"
      }
    ]
  },
  "license": "MIT",
  "commands": [
    {
      "name": "configure-model",
      "title": "Configure AI Model",
      "subtitle": "Stealth AI",
      "description": "Fetch and select models for your provider",
      "mode": "view",
      "icon": "icon.png"
    },
    {
      "name": "action-1",
      "title": "Stealth Action 1",
      "subtitle": "Stealth AI",
      "description": "Fix typos and grammar",
      "mode": "no-view",
      "ai": true,
      "keywords": [
        "grammar",
        "typo",
        "spelling",
        "fix"
      ],
      "icon": "icon.png",
      "preferences": [
        {
          "name": "title",
          "title": "Action Title",
          "description": "Name shown in notifications",
          "type": "textfield",
          "default": "Fix Grammar",
          "required": false
        },
        {
          "name": "prompt",
          "title": "AI Prompt",
          "description": "Default prompt (single-line). Edit in the action view for multiline.",
          "type": "textfield",
          "default": "Fix all typos, spelling errors, and grammar issues in the following text. Return only the corrected text without any explanation:",
          "required": false
        }
      ]
    },
    {
      "name": "action-2",
      "title": "Stealth Action 2",
      "subtitle": "Stealth AI",
      "description": "Make text more concise",
      "mode": "no-view",
      "ai": true,
      "keywords": [
        "concise",
        "shorter",
        "brief",
        "shorten"
      ],
      "icon": "icon.png",
      "preferences": [
        {
          "name": "title",
          "title": "Action Title",
          "description": "Name shown in notifications",
          "type": "textfield",
          "default": "Make Concise",
          "required": false
        },
        {
          "name": "prompt",
          "title": "AI Prompt",
          "description": "Default prompt (single-line). Edit in the action view for multiline.",
          "type": "textfield",
          "default": "Make the following text more concise while preserving the key meaning. Return only the rewritten text without explanation:",
          "required": false
        }
      ]
    },
    {
      "name": "action-3",
      "title": "Stealth Action 3",
      "subtitle": "Stealth AI",
      "description": "Convert text to bullet list",
      "mode": "no-view",
